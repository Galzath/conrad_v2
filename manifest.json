{
  "manifest_version": 3,
  "name": "Conrad Chatbot",
  "version": "0.1.0",
  "description": "Chat with Conrad, powered by Confluence and Gemini",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "options_page": "options.html",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ],
      "css": [
        "sidebar_container_styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "sidebar.html",
        "style.css",
        "sidebar_script.js",
        "images/*.png",
        "images/*.svg"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
