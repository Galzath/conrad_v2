{
  "manifest_version": 3,
  "name": "Conrad Chatbot",
  "version": "0.1.0",
  "description": "Chat with Conrad, powered by Confluence and Gemini",
  "action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "permissions": [
    "storage"
  ]
}
